generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Messages {
  id String @id @default(uuid())
  title String
  message String
  startDate DateTime
  endDate DateTime
  isActive Boolean @default(false)
  @@map("messages")
}


model User {
  id String @id @default(uuid())
  username String
  password String
  @@map("users")

}

model Contacts{
    id String @id @default(uuid())
    name String
    enterprise String 
    message String
    email String
    @@map("contacts")
}